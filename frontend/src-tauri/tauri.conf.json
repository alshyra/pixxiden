{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "PixiDen",
    "version": "0.1.0",
    "identifier": "com.pixiden.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:5173",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "PixiDen",
                "width": 1280,
                "height": 800,
                "minWidth": 900,
                "minHeight": 600,
                "resizable": true,
                "fullscreen": false,
                "decorations": true,
                "center": true
            }
        ],
        "security": {
            "csp": "default-src 'self'; connect-src 'self' http://localhost:9090 https://cdn.cloudflare.steamstatic.com https://images.gog.com https://cdn.akamai.steamstatic.com https://steamcdn-a.akamaihd.net https://*.epicgames.com; img-src 'self' data: https: http:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; script-src 'self'"
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "deb",
            "appimage",
            "rpm"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png"
        ],
        "linux": {
            "deb": {
                "depends": [
                    "legendary",
                    "wine"
                ],
                "desktopTemplate": null
            },
            "appimage": {
                "bundleMediaFramework": false
            }
        }
    },
    "plugins": {
        "shell": {
            "open": true
        }
    }
}