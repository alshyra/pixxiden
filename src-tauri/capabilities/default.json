{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for PixiDen",
  "windows": [
    "main",
    "game-overlay",
    "epic-auth",
    "gog-auth",
    "amazon-auth"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-create",
    "core:window:allow-close",
    "core:window:allow-show",
    "core:window:allow-hide",
    "core:webview:allow-create-webview-window",
    "core:event:default",
    "shell:allow-spawn",
    "shell:allow-open",
    "log:allow-log",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "log:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPCONFIG/*"
        },
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$HOME/.config/*"
        },
        {
          "path": "$HOME/.local/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-read",
      "allow": [
        {
          "path": "$APPCONFIG/*"
        },
        {
          "path": "$APPDATA/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-write",
      "allow": [
        {
          "path": "$APPCONFIG/*"
        },
        {
          "path": "$APPDATA/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-appconfig-write-recursive",
      "allow": [
        {
          "path": "$APPCONFIG/*",
          "recursive": true
        }
      ]
    },
    {
      "identifier": "fs:allow-app-meta",
      "allow": [
        {
          "path": "$APPCONFIG/*"
        },
        {
          "path": "$APPDATA/*"
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*"
        },
        {
          "url": "http://*"
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/legendary",
          "sidecar": true,
          "args": true
        },
        {
          "name": "binaries/gogdl",
          "sidecar": true,
          "args": true
        },
        {
          "name": "binaries/nile",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}