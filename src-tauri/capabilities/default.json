{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for PixiDen",
  "windows": [
    "main",
    "game-overlay",
    "epic-auth",
    "gog-auth",
    "amazon-auth"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-create",
    "core:window:allow-close",
    "core:window:allow-show",
    "core:window:allow-hide",
    "core:webview:allow-create-webview-window",
    "core:event:default",
    "shell:allow-spawn",
    "shell:allow-open",
    "log:allow-log",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "log:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/legendary",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}