{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for PixiDen",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-create",
    "core:window:allow-close",
    "core:window:allow-show",
    "core:window:allow-hide",
    "core:event:default",
    
    "shell:allow-execute",
    "shell:allow-open",
    
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-read-dir",
    "fs:allow-create-dir",
    "fs:allow-remove-file",
    "fs:allow-exists",
    
    "path:default",
    "dialog:default"
  ],
  "scope": {
    "allow": [
      "$HOME/.config/pixiden/**",
      "$HOME/.config/legendary/**",
      "$HOME/.config/gogdl/**",
      "$HOME/.config/nile/**",
      "$HOME/.config/heroic/**",
      "$HOME/.local/share/pixiden/**",
      "$HOME/.local/share/wine-ge/**",
      "$HOME/.local/share/proton-ge/**",
      "$HOME/GOG Games/**",
      "$HOME/Games/**",
      "$RESOURCE/binaries/*"
    ],
    "sidecar": [
      "binaries/legendary",
      "binaries/nile",
      "binaries/gogdl"
    ]
  }
}
