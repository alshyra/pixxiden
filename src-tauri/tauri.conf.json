{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Pixxiden",
  "version": "0.1.0",
  "identifier": "com.Pixxiden.launcher",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Pixxiden",
        "visible": false,
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false
      },
      {
        "label": "splashscreen",
        "url": "index.html?splash",
        "width": 500,
        "height": 500,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "center": true,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "externalBin": [
      "binaries/legendary",
      "binaries/nile",
      "binaries/gogdl"
    ],
    "resources": [
      "resources/*"
    ]
  }
}