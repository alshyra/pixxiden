{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Pixxiden",
  "version": "0.1.0",
  "identifier": "com.Pixxiden.launcher",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Pixxiden",
        "url": "index.html",
        "visible": false,
        "resizable": true,
        "fullscreen": true,
        "maximized": true,
        "center": true
      },
      {
        "label": "splashscreen",
        "url": "index.html?splash",
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "center": true,
        "resizable": false,
        "maximized": true,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/pixxiden.png"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "externalBin": ["binaries/legendary", "binaries/nile", "binaries/gogdl"],
    "resources": ["resources/*"]
  }
}
