{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": [
      "node",
      "@wdio/mocha-framework",
      "webdriverio"
    ]
  },
  "include": [
    "e2e/**/*.ts",
    "wdio.conf.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}