{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "Game Launcher",
  "version": "0.1.0",
  "identifier": "com.gamelauncher.app",
  "build": {
    "beforeDevCommand": "npm run vite",
    "beforeBuildCommand": "npm run vite:build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Game Launcher",
        "width": 1920,
        "height": 1080,
        "fullscreen": true,
        "resizable": true,
        "decorations": false,
        "transparent": false,
        "alwaysOnTop": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/game-launcher-backend"
    ],
    "resources": [],
    "copyright": "",
    "category": "Game",
    "shortDescription": "Game Launcher for Linux",
    "longDescription": "A modern game launcher for Linux with gamepad support",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}